- provide(:title, "Список сервисов")
.services
  %h2 Сервисы
  = link_to("Создать новый сервис", new_service_path, class: 'new-service-link')
  - @services.each do |service|
    %article.service
      .service-name
        %h3
          = link_to(service.name + ":", '#')
      = link_to("Информация", service)
      = link_to("Изменить", edit_service_path(service))
      = link_to("Админка", service.admin_link)
